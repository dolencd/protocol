{
  "compilerOptions": {
    "outDir": "dist/",
    "sourceMap": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "target": "ES6",
    "declaration": true,
    "removeComments": false,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "pretty": true,
    "strict": false,
    "lib":[
      "ES2020"
    ]
  },
  "include": [
    "src"
  ]
}
