{
  "compilerOptions": {
    "outDir": "dist/",
    "sourceMap": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "target": "es6",
    "declaration": true,
    "removeComments": false,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "pretty": true,
    "lib":[
      "ES2019"
    ]
  },
  "include": [
    "src"
  ]
}